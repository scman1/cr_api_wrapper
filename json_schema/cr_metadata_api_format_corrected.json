{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Crossref/rest-api-doc/blob/master/api_format.md",
  "title": "CRWork",
  "description": "A published work indexed by crossref, Generated according to description",
  "definitions": {
    "funder": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Funding body primary name"
        },
        "DOI": {
          "type": "string",
          "description": "Optional Open Funder Registry DOI uniquely identifing the funding body"
        },
        "award": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Award number(s) for awards given by the funding body",
          "minItems": 0,
          "uniqueItems": false
        },
        "doi-asserted-by": {
          "type": "string",
          "description": "Either crossref or publisher"
        }
      },
      "required": [
        "name"
      ]
    },
    "clinical-trial-number": {
      "type": "object",
      "properties": {
        "clinical-trial-number": {
          "type": "string",
          "description": "Identifier of the clinical trial"
        },
        "registry": {
          "type": "string",
          "description": "DOI of the clinical trial regsitry that assigned the trial number"
        },
        "type": {
          "type": "string",
          "description": "One of preResults, results or postResults"
        }
      },
      "required": [
        "clinical-trial-number",
        "registry"
      ]
    },
    "contributor": {
      "type": "object",
      "properties": {
        "family": {
          "type": "string",
          "description": ""
        },
        "given": {
          "type": "string",
          "description": ""
        },
        "ORCID": {
          "type": {
            "$ref": "#/definitions/url"
          },
          "description": "URL-form of an ORCID identifier"
        },
        "authenticated-orcid": {
          "type": "boolean",
          "description": "If true, record owner asserts that the ORCID user completed ORCID OAuth authentication"
        },
        "affiliation": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/affiliation"
          },
          "description": "",
          "minItems": 0,
          "uniqueItems": false
        }
      },
      "required": [
        "family"
      ]
    },
    "affiliation": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": ""
        }
      },
      "required": [
        "name"
      ]
    },
    "date": {
      "type": "object",
      "properties": {
        "date-parts": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Contains an ordered array of year, month, day of month. Note that the field contains a nested array, e.g. [ [ 2006, 5, 19 ] ] to conform to citeproc JSON dates",
          "minItems": 0,
          "uniqueItems": false
        },
        "timestamp": {
          "type": "number",
          "description": "Seconds since UNIX epoch"
        },
        "date-time": {
          "type": "string",
          "description": "ISO 8601 date time"
        }
      },
      "required": [
        "date-parts",
        "timestamp",
        "date-time"
      ]
    },
    "partial-date": {
      "type": "object",
      "properties": {
        "date-parts": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "Contains an ordered array of year, month, day of month. Note that the field contains a nested array, e.g. [ [ 2006, 5, 19 ] ] to conform to citeproc JSON dates",
          "minItems": 0,
          "uniqueItems": false
        }
      },
      "required": [
        "date-parts"
      ]
    },
    "update": {
      "type": "object",
      "properties": {
        "updated": {
          "type": {
            "$ref": "#/definitions/assertion-group"
          },
          "description": "Date on which the update was published"
        },
        "DOI": {
          "type": "string",
          "description": "DOI of the updated work"
        },
        "type": {
          "type": "string",
          "description": "The type of update, for example retraction or correction"
        },
        "label": {
          "type": "string",
          "description": "A display-friendly label for the update type"
        }
      },
      "required": [
        "updated",
        "DOI",
        "type"
      ]
    },
    "assertion": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": ""
        },
        "value": {
          "type": "string",
          "description": ""
        },
        "URL": {
          "$ref": "#/definitions/url"
        },
        "explanation": {
          "URL": {
            "$ref": "#/definitions/url"
          }
        },
        "label": {
          "type": "string",
          "description": ""
        },
        "order": {
          "type": "number",
          "description": ""
        },
        "group": {
          "type": {
            "$ref": "#/definitions/assertion-group"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "assertion-group": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": ""
        },
        "label": {
          "type": "string",
          "description": ""
        }
      },
      "required": [
        "name"
      ]
    },
    "license": {
      "type": "object",
      "properties": {
        "content-version": {
          "type": "string",
          "description": "Either vor (version of record,) am (accepted manuscript,) tdm (text and data mining) or unspecified"
        },
        "delay-in-days": {
          "type": "number",
          "description": "Number of days between the publication date of the work and the start date of this license"
        },
        "start": {
          "type": {
            "$ref": "#/definitions/partial-date"
          },
          "description": "Date on which this license begins to take effect"
        },
        "URL": {
          "type": {
            "$ref": "#/definitions/url"
          },
          "description": "Link to a web page describing this license"
        }
      },
      "required": [
        "content-version",
        "delay-in-days",
        "start",
        "URL"
      ]
    },
    "resource-link": {
      "type": "object",
      "properties": {
        "intended-application": {
          "type": "string",
          "description": "Either text-mining, similarity-checking or unspecified"
        },
        "content-version": {
          "type": "string",
          "description": "Either vor (version of record,) am (accepted manuscript) or unspecified"
        },
        "URL": {
          "type": {
            "$ref": "#/definitions/url"
          },
          "description": "Direct link to a full-text download location"
        },
        "content-type": {
          "type": "string",
          "description": "Content type (or MIME type) of the full-text object"
        }
      },
      "required": [
        "intended-application",
        "content-version",
        "URL"
      ]
    },
    "reference": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "description": ""
        },
        "DOI": {
          "type": "string",
          "description": ""
        },
        "doi-asserted-by": {
          "type": "string",
          "description": "One of crossref or publisher"
        },
        "issue": {
          "type": "string",
          "description": ""
        },
        "first-page": {
          "type": "string",
          "description": ""
        },
        "volume": {
          "type": "string",
          "description": ""
        },
        "edition": {
          "type": "string",
          "description": ""
        },
        "component": {
          "type": "string",
          "description": ""
        },
        "standard-designator": {
          "type": "string",
          "description": ""
        },
        "standards-body": {
          "type": "string",
          "description": ""
        },
        "author": {
          "type": "string",
          "description": ""
        },
        "year": {
          "type": "string",
          "description": ""
        },
        "unstructured": {
          "type": "string",
          "description": ""
        },
        "journal-title": {
          "type": "string",
          "description": ""
        },
        "article-title": {
          "type": "string",
          "description": ""
        },
        "series-title": {
          "type": "string",
          "description": ""
        },
        "volume-title": {
          "type": "string",
          "description": ""
        },
        "ISSN": {
          "type": "string",
          "description": ""
        },
        "issn-type": {
          "type": "string",
          "description": "One of pissn or eissn"
        },
        "ISBN": {
          "type": "string",
          "description": ""
        },
        "isbn-type": {
          "type": "string",
          "description": ""
        }
      },
      "required": [
        "key"
      ]
    },
    "issn-with-type": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "description": ""
        },
        "type": {
          "type": "string",
          "description": "One of eissn, pissn or lissn"
        }
      },
      "required": [
        "value",
        "type"
      ]
    },
    "content-domain": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "",
          "minItems": 0,
          "uniqueItems": false
        },
        "crossmark-restriction": {
          "type": "boolean",
          "description": ""
        }
      },
      "required": [
        "domain",
        "crossmark-restriction"
      ]
    },
    "relation": {
      "type": "object",
      "properties": {
        "id-type": {
          "type": "string",
          "description": ""
        },
        "id": {
          "type": "string",
          "description": ""
        },
        "asserted-by": {
          "type": "string",
          "description": "One of subject or object"
        }
      },
      "required": [
        "id-type",
        "id",
        "asserted-by"
      ]
    },
    "review": {
      "type": "object",
      "properties": {
        "running-number": {
          "type": "string",
          "description": ""
        },
        "revision-round": {
          "type": "string",
          "description": ""
        },
        "stage": {
          "type": "string",
          "description": "One of pre-publication or post-publication"
        },
        "recommendation": {
          "type": "string",
          "description": "One of major-revision or minor-revision or reject or reject-with-resubmit or accept"
        },
        "type": {
          "type": "string",
          "description": "One of referee-report or editor-report or author-comment or community-comment or aggregate"
        },
        "competing-interest-statement": {
          "type": "string",
          "description": ""
        },
        "language": {
          "type": "string",
          "description": ""
        }
      }
    },
    "url": {
      "type": "string",
      "description": "Definition of url, custom not part of the CR specification"
    }
  },
  "type": "object",
  "properties": {
    "publisher": {
      "type": "string",
      "description": "Name of work's publisher"
    },
    "title": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0,
          "uniqueItems": false
        }
      ],
      "description": "Work titles, including translated titles"
    },
    "original-title": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Work titles in the work's original publication language",
      "minItems": 0,
      "uniqueItems": false
    },
    "short-title": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Short or abbreviated work titles",
      "minItems": 0,
      "uniqueItems": false
    },
    "abstract": {
      "type": "string",
      "description": "Abstract as a JSON string or a JATS XML snippet encoded into a JSON string"
    },
    "reference-count": {
      "type": "number",
      "description": "Deprecated Same as references-count"
    },
    "references-count": {
      "type": "number",
      "description": "Count of outbound references deposited with Crossref"
    },
    "is-referenced-by-count": {
      "type": "number",
      "description": "Count of inbound references deposited with Crossref"
    },
    "source": {
      "type": "string",
      "description": "Currently always Crossref"
    },
    "prefix": {
      "type": "string",
      "description": "DOI prefix identifier of the form http://id.crossref.org/prefix/DOI_PREFIX"
    },
    "DOI": {
      "type": "string",
      "description": "DOI of the work"
    },
    "URL": {
      "type": {
        "$ref": "#/definitions/url"
      },
      "description": "URL form of the work's DOI"
    },
    "member": {
      "type": "string",
      "description": "Member identifier of the form http://id.crossref.org/member/MEMBER_ID"
    },
    "type": {
      "type": "string",
      "description": "Enumeration, one of the type ids from https://api.crossref.org/v1/types"
    },
    "created": {
      "type": {
        "$ref": "#/definitions/date"
      },
      "description": "Date on which the DOI was first registered"
    },
    "deposited": {
      "type": {
        "$ref": "#/definitions/date"
      },
      "description": "Date on which the work metadata was most recently updated"
    },
    "indexed": {
      "type": {
        "$ref": "#/definitions/date"
      },
      "description": "Date on which the work metadata was most recently indexed. Re-indexing does not imply a metadata change, see deposited for the most recent metadata change date"
    },
    "issued": {
      "type": {
        "$ref": "#/definitions/partial-date"
      },
      "description": "Earliest of published-print and published-online"
    },
    "posted": {
      "type": {
        "$ref": "#/definitions/partial-date"
      },
      "description": "Date on which posted content was made available online"
    },
    "accepted": {
      "type": {
        "$ref": "#/definitions/partial-date"
      },
      "description": "Date on which a work was accepted, after being submitted, during a submission process"
    },
    "subtitle": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Work subtitles, including original language and translated",
      "minItems": 0,
      "uniqueItems": false
    },
    "container-title": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0,
          "uniqueItems": false
        }
      ],
      "description": "Full titles of the containing work (usually a book or journal)"
    },
    "short-container-title": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 0,
          "uniqueItems": false
        }
      ],
      "description": "Abbreviated titles of the containing work"
    },
    "group-title": {
      "type": "string",
      "description": "Group title for posted content"
    },
    "issue": {
      "type": "string",
      "description": "Issue number of an article's journal"
    },
    "volume": {
      "type": "string",
      "description": "Volume number of an article's journal"
    },
    "page": {
      "type": "string",
      "description": "Pages numbers of an article within its journal"
    },
    "article-number": {
      "type": "string",
      "description": ""
    },
    "published-print": {
      "type": {
        "$ref": "#/definitions/partial-date"
      },
      "description": "Date on which the work was published in print"
    },
    "published-online": {
      "type": {
        "$ref": "#/definitions/partial-date"
      },
      "description": "Date on which the work was published online"
    },
    "subject": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Subject category names, a controlled vocabulary from Sci-Val. Available for most journal articles",
      "minItems": 0,
      "uniqueItems": false
    },
    "ISSN": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "issn-type": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/issn-with-type"
      },
      "description": "List of ISSNs with ISSN type information",
      "minItems": 0,
      "uniqueItems": false
    },
    "ISBN": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "archive": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "license": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/license"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "funder": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/funder"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "assertion": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/assertion"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "author": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/contributor"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "editor": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/contributor"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "chair": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/contributor"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "translator": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/contributor"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "update-to": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/update"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "update-policy": {
      "type": {
        "$ref": "#/definitions/url"
      },
      "description": "Link to an update policy covering Crossmark updates for this work"
    },
    "link": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/resource-link"
      },
      "description": "URLs to full-text locations",
      "minItems": 0,
      "uniqueItems": false
    },
    "clinical-trial-number": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/clinical-trial-number"
      },
      "description": "",
      "minItems": 0,
      "uniqueItems": false
    },
    "alternative-id": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Other identifiers for the work provided by the depositing member",
      "minItems": 0,
      "uniqueItems": false
    },
    "reference": {
      "type": "array",
      "items": {
        "type": "reference"
      },
      "description": "List of references made by the work",
      "minItems": 0,
      "uniqueItems": false
    },
    "content-domain": {
      "type": {
        "$ref": "#/definitions/content-domain"
      },
      "description": "Information on domains that support Crossmark for this work"
    },
    "relation": {
      "type": {
        "$ref": "#/definitions/relation"
      },
      "description": "Relations to other works"
    },
    "review": {
      "type": {
        "$ref": "#/definitions/review"
      },
      "description": "Peer review metadata"
    },
    "event": {
      "type": "string",
      "description": "Name of conference, workshop where work was presesnted"
    }
  },
  "required": [
    "publisher",
    "title",
    "reference-count",
    "references-count",
    "is-referenced-by-count",
    "source",
    "prefix",
    "DOI",
    "URL",
    "member",
    "type",
    "created",
    "deposited",
    "indexed",
    "issued"
  ]
}